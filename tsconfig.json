{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "alwaysStrict": true,
    "baseUrl": "./src",
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "outDir": "./dist",
    "resolveJsonModule": true,
    "sourceMap": true,
    "strict": true,
    "target": "es6",
    "typeRoots": ["./node_modules/@types"]
  },
  "exclude": ["node_modules", "**/__mocks__", "**/__tests__", "**/*.spec.ts"],
  "include": ["src/**/*.ts"]
}
